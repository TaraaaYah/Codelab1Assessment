#include <iostream>
#include <string>
using namespace std;

int main()
{
    int x[17] = {7, 3, 32, 2, 55, 34, 6, 13, 29, 22, 11, 9, 1, 5, 42, 39, 8};

    cout << "List: ";
    for (int cnt = 0; cnt < 17; ++cnt) {
        cout << x[cnt];
        if (cnt < 16) cout << ", "; // no trailing comma at the end
    }

    int searchNum;
    cout << endl << "Enter an integer in the list to search for: ";
    cin >> searchNum;

    bool found = false;
    int position = -1;

    for (int i = 0; i < 17; i++) {
        if (x[i] == searchNum) {
            found = true;
            position = i;
            break; // stop at the first match
        }
    }

    if (found)
        cout << searchNum << " was found at index " << position << "." << endl;
    else
        cout << searchNum << " was not found in the list." << endl;

    return 0;
}
